@model RendicionCuentasServices.Model.EntUsuario
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/vwLogin.cshtml";
}

<!-- Panel -->
<div class="container" style="width: 940px; padding: 0px;">
    <div class="row mrt-40 logos">
        <div class="col-md-2 col-md-offset-3"><img src="~/Images/logos/pemex.png" /></div>
        <div class="col-md-2"><img src="~/Images/logos/sspa.png" /></div>
        <div class="col-md-2"><img src="~/Images/logos/sdca.png" /></div>
    </div>
    <div class="row-fluid mrt-60">
        <div class="col-md-2"></div>
        <div class="login col-md-8">
            <div class="login-logo-placa">
                <img src="~/Images/logos/logo_sistema.png" />
                <p>ACCESO AL SISTEMA DE RENDICIÓN DE CUENTAS FUNCIONAL</p>
            </div>
            <div class="login-container pdb-20 col-md-10 col-md-offset-1" id="panel-opt" >
                <!-- Login Form -->
                <div class="Content-elements" style="position:relative; margin: 50px auto 0px;">
                    @using (Html.BeginForm("Valid", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
                    {
                        @Html.AntiForgeryToken()
                        
                       

                        <div class="form-field">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-large txtForm text-center", placeholder = "Usuario" })
                        </div>

                        <div class="form-field">
                            @Html.PasswordFor(m => m.Password, new { @class = "input-large txtForm text-center", placeholder = "Contraseña" })
                        </div>

                        <div class="mrt-60"><input class="btnIngresar center-block" type="submit" value="Entrar" /></div>
                        
                        <div class="form-field text-center mrt-20" style="color:#e6e6e6">
                            Esta aplicación requiere:<br />
                            <span class="fa fa-chrome"> Chrome</span>&nbsp;&nbsp;&nbsp;
                            <span class="fa fa-firefox"> Firefox</span>
                        </div>

                     <!--   <div class="form-field text-center mrt-20">
                            <a href="@Url.Action("RecuperarPass", "Login")" class="link-RemPass text-center">RECUPERAR CUENTA </a>
                        </div>

                         -->

                    }
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="Msj-Error">
            @if (ViewBag.Msj != null)
            {
                <div id="MsjError" class="alert alert-danger" role="alert">@ViewBag.Msj</div>
            }
        </div>
    </div>
</div>

